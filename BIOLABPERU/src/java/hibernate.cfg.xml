<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/laboratorio?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="modelo/Tipousuario.hbm.xml"/>
    <mapping resource="modelo/Tipoexamen.hbm.xml"/>
    <mapping resource="modelo/Trabajador.hbm.xml"/>
    <mapping resource="modelo/Muestra.hbm.xml"/>
    <mapping resource="modelo/Paciente.hbm.xml"/>
    <mapping resource="modelo/Examen.hbm.xml"/>
    <mapping resource="modelo/Resultado.hbm.xml"/>
    <mapping resource="modelo/Detallecita.hbm.xml"/>
    <mapping resource="modelo/Estadocita.hbm.xml"/>
    <mapping resource="modelo/Cita.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
